    <script>
        function calculateInvestment() {
            // Get input values
            const purchasePrice = parseFloat(document.getElementById('purchasePrice').value) || 0;
            const downPaymentPercent = parseFloat(document.getElementById('downPayment').value) || 0;
            const interestRate = parseFloat(document.getElementById('interestRate').value) || 0;
            const loanTerm = parseFloat(document.getElementById('loanTerm').value) || 0;
            const monthlyRent = parseFloat(document.getElementById('monthlyRent').value) || 0;
            const vacancyRate = parseFloat(document.getElementById('vacancyRate').value) || 0;
            const insurance = parseFloat(document.getElementById('insurance').value) || 0;
            const propertyTax = parseFloat(document.getElementById('propertyTax').value) || 0;
            const maintenance = parseFloat(document.getElementById('maintenance').value) || 0;
            const management = parseFloat(document.getElementById('management').value) || 0;
            const capex = parseFloat(document.getElementById('capex').value) || 0;
            const other = parseFloat(document.getElementById('other').value) || 0;

            // Calculations
            const downPaymentAmount = purchasePrice * (downPaymentPercent / 100);
            const loanAmount = purchasePrice - downPaymentAmount;
            const monthlyRate = interestRate / 100 / 12;
            const numPayments = loanTerm * 12;
            
            // Monthly payment calculation (P&I)
            let monthlyPayment = 0;
            if (monthlyRate > 0) {
                monthlyPayment = loanAmount * (monthlyRate * Math.pow(1 + monthlyRate, numPayments)) / 
                                (Math.pow(1 + monthlyRate, numPayments) - 1);
            } else {
                monthlyPayment = loanAmount / numPayments;
            }

            const effectiveRent = monthlyRent * (1 - vacancyRate / 100);
            const totalMonthlyExpenses = monthlyPayment + insurance + propertyTax + maintenance + management + capex + other;
            const monthlyCashFlow = effectiveRent - totalMonthlyExpenses;
            const annualCashFlow = monthlyCashFlow * 12;
            
            // Calculate returns
            const annualRent = monthlyRent * 12 * (1 - vacancyRate / 100);
            const annualExpenses = (insurance + propertyTax + maintenance + management + capex + other) * 12;
            const noi = annualRent - annualExpenses;
            const capRate = (noi / purchasePrice) * 100;
            const cashOnCash = (annualCashFlow / downPaymentAmount) * 100;
            const onePercentRule = (monthlyRent / purchasePrice) * 100;
            const totalCashNeeded = downPaymentAmount + (purchasePrice * 0.05); // Including closing costs estimate
            const totalROI = ((annualCashFlow + (purchasePrice * 0.03)) / totalCashNeeded) * 100; // Including appreciation estimate

            // Update display
            document.getElementById('monthlyFlow').textContent = `$${monthlyCashFlow.toLocaleString('en-US', {maximumFractionDigits: 0})}`;
            document.getElementById('monthlyFlow').className = monthlyCashFlow >= 0 ? 'metric-value cash-flow-positive' : 'metric-value cash-flow-negative';
            
            document.getElementById('annualFlow').textContent = `$${annualCashFlow.toLocaleString('en-US', {maximumFractionDigits: 0})}`;
            document.getElementById('capRate').textContent = `${capRate.toFixed(1)}%`;
            document.getElementById('cashOnCash').textContent = `${cashOnCash.toFixed(1)}%`;
            document.getElementById('onePercent').textContent = `${onePercentRule.toFixed(2)}%`;
            document.getElementById('roi').textContent = `${totalROI.toFixed(1)}%`;
            
            document.getElementById('totalCash').textContent = `$${totalCashNeeded.toLocaleString('en-US', {maximumFractionDigits: 0})}`;
            document.getElementById('loanAmount').textContent = `$${loanAmount.toLocaleString('en-US', {maximumFractionDigits: 0})}`;
            document.getElementById('monthlyPayment').textContent = `$${monthlyPayment.toLocaleString('en-US', {maximumFractionDigits: 0})}`;
            document.getElementById('effectiveRent').textContent = `$${effectiveRent.toLocaleString('en-US', {maximumFractionDigits: 0})}`;
            document.getElementById('totalExpenses').textContent = `$${totalMonthlyExpenses.toLocaleString('en-US', {maximumFractionDigits: 0})}`;
            
            // Recommendation logic
            const recommendation = document.getElementById('recommendation');
            let recText = '';
            let recClass = '';
            
            if (monthlyCashFlow > 200 && capRate > 8 && cashOnCash > 10) {
                recText = 'üéØ EXCELLENT DEAL! This property shows strong cash flow and returns. Consider moving forward with this investment.';
                recClass = 'recommendation good';
            } else if (monthlyCashFlow > 0 && capRate > 6 && cashOnCash > 8) {
                recText = '‚úÖ GOOD DEAL. Solid returns with positive cash flow. This could be a worthwhile investment.';
                recClass = 'recommendation good';
            } else if (monthlyCashFlow > -100 && capRate > 5) {
                recText = '‚ö†Ô∏è PROCEED WITH CAUTION. Returns are moderate. Consider negotiating price or finding ways to increase rent.';
                recClass = 'recommendation caution';
            } else {
                recText = '‚ùå AVOID THIS DEAL. Poor cash flow and returns. Look for better opportunities in the market.';
                recClass = 'recommendation avoid';
            }
            
            recommendation.textContent = recText;
            recommendation.className = recClass;
        }

        // Set default values
        window.onload = function() {
            document.getElementById('purchasePrice').value = 250000;
            document.getElementById('downPayment').value = 20;
            document.getElementById('interestRate').value = 6.5;
            document.getElementById('loanTerm').value = 30;
            document.getElementById('monthlyRent').value = 2000;
            document.getElementById('vacancyRate').value = 8;
            document.getElementById('insurance').value = 100;
            document.getElementById('propertyTax').value = 300;
            document.getElementById('maintenance').value = 150;
            document.getElementById('management').value = 100;
            document.getElementById('capex').value = 100;
            document.getElementById('other').value = 50;
            
            calculateInvestment();
        };
    </script>
